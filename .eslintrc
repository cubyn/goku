{
    "parser": "babel-eslint",
    "env": {
        // "browser": true,
        // in CommonJS
        "node": true
    },
    "rules": {
        "quotes": [2, "single"],
        "eol-last": [0],
        "no-mixed-requires": [0],
        "no-underscore-dangle": [0],
        "no-unused-vars": [2, {"vars": "all", "args": "none"}],
        "no-use-before-define": [2, "nofunc"],
        "curly": [0],
        "handle-callback-err": [0]
    },
    "globals": {
        "angular": false,
        "bb": false,
        "_": false,
        "logger": false,
        "moment": false,
        "__root": false
    },
    "ecmaFeatures": {
        "modules": true
    }
}
